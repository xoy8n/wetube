header
    a(href="/").header__logo
        i.fab.fa-youtube
    nav
        ul
            li
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li
                    a(href="/videos/upload") 업로드
                li
                    a(href="/users/edit") 개인정보수정
                li
                    a(href="/users/logout")  로그아웃
                li
                    a(href=`/users/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            span.header__avatar--span 😎
                        else
                            if loggedInUser.avatarUrl.includes("github")
                                img.header__avatar(src=loggedInUser.avatarUrl)
                            else
                                img.header__avatar(src="/" + loggedInUser.avatarUrl)
            else
                li
                    a(href="/join")  가입하기
                li
                    a(href="/login").header__btn  로그인                      
            